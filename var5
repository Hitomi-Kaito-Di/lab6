#include <string>
#include <iostream>
#include<math.h>
#include<windows.h>
using namespace std;
class Human
{
private:
    string m_name;
    int m_age;
public:
    void GetData() {
        cout << "Введите имя: ";
        cin >> m_name;
        cout << "\nИмя: " << m_name;
        cout << "-------------------------------" << endl;
    }
    void GetAge() {
        cout << "Введите возраст: ";
        cin >> m_age;
        cout << "\nВозраст: " << m_age << endl;
        cout << "-------------------------------" << endl;
    }
    Human() { cout << "Человек." << endl; }
    ~Human() { cout << "Деструктор класса Human" << endl; }
};
class Gender : private Human
{
private:
    string gender;
public:
    void Get() {
        Human::GetAge();
        cout << "Введите пол: ";
        cin >> gender;
        cout << "\nПол: " << gender << endl;
        cout << "-------------------------------" << endl;
    }
    Gender() { cout << "Пол." << endl; }
    ~Gender() { cout << "Деструктор класса Gender" << endl; }
};

class Employee : public Human
{
private:
    string m_employer;
    double m_pay;

public:
    void Get() {
        Human::GetData();
        cout << "Введите место работы: ";
        cin >> m_employer;
        cout << "Введите заработную плату: ";
        cin >> m_pay;
        cout << "\nМесто работы: " << m_employer;
        cout << "\nЗаработная плата: " << m_pay << endl;
        cout << "-------------------------------" << endl;
    }
    Employee() { cout << "Работа." << endl; }
    ~Employee() { cout << "Деструктор класса Employee" << endl; }
};

class Teacher : private Employee, public Gender
{
private:
    string m_teachersGrade;

public:
    void GetInfo() {
        Employee::Get();
        Gender::Get();
        cout << "Введите степень: ";
        cin >> m_teachersGrade;
        cout << "\nСтепень: " << m_teachersGrade << endl;;
        cout << "-------------------------------" << endl;
    }
    Teacher() { cout << "Учитель." << endl; }
    ~Teacher() { cout << "Деструктор класса Teacher" << endl; }
};

int main()
{
    setlocale(0, "");;
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    Human human;
    human.GetData();
    human.GetAge();
    Employee employee;
    employee.Get();
    Gender g;
    g.Get();
    Teacher teacher;
    teacher.GetInfo();
     return 0;
}
